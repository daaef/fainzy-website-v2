# Fail on error
set -e

# Run lint-staged for quick checks on staged files
echo "ðŸ” Checking staged files..."
if ! npx lint-staged; then
  echo "âŒ lint-staged failed. Aborting commit." >&2
  exit 1
fi

# Run TypeScript type checking on entire project
echo "ðŸ“ Running TypeScript type check..."
if ! npx tsc --noEmit; then
  echo "âŒ Type check failed. Fix errors before committing." >&2
  exit 1
fi

echo "âœ… All checks passed! Proceeding with commit..."
